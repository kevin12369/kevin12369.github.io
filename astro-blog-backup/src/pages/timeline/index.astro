---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Section from '../../components/Section.astro';
import { AppConfig } from '../../utils/AppConfig';

const allPosts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Group posts by year
const postsByYear = allPosts.reduce((acc, post) => {
  const year = post.data.pubDate.getFullYear();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(post);
  return acc;
}, {} as Record<number, typeof allPosts>);

const years = Object.keys(postsByYear).map(Number).sort((a, b) => b - a);
---

<Layout
  head={{
    title: `Timeline - ${AppConfig.title}`,
    description: AppConfig.description
  }}
>
  <Section>
    <div class="py-12">
      <h1 class="mb-8 text-4xl font-bold">Timeline</h1>
      <p class="mb-12 text-lg text-gray-600 dark:text-gray-400">
        所有文章按时间顺序排列
      </p>

      <div class="relative">
        {/* Timeline line */}
        <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gray-300 dark:bg-gray-700 sm:left-8"></div>

        {years.map((year) => (
          <div class="mb-16">
            <h2 class="mb-8 text-2xl font-bold">{year}</h2>
            
            {postsByYear[year].map((post, index) => (
              <div class="relative mb-8 pl-12 sm:pl-20">
                {/* Timeline dot */}
                <div class="absolute left-2 top-0 h-4 w-4 rounded-full bg-orange-600 sm:left-7"></div>
                
                <div class="rounded-lg bg-stone-200/50 p-4 shadow-sm dark:bg-stone-800/50">
                  <div class="mb-2 text-sm text-gray-600 dark:text-gray-400">
                    {post.data.pubDate.toLocaleDateString('zh-CN', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </div>
                  
                  <a href={`/blog/${post.slug}/`} class="block hover:text-orange-600">
                    <h3 class="mb-2 text-xl font-bold">{post.data.title}</h3>
                  </a>
                  
                  {post.data.description && (
                    <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
                      {post.data.description}
                    </p>
                  )}
                  
                  <div class="mt-3 flex flex-wrap gap-2">
                    {post.data.category && (
                      <span class="rounded-full bg-stone-300 px-3 py-1 text-xs font-semibold dark:bg-stone-700">
                        {post.data.category}
                      </span>
                    )}
                    
                    {post.data.tags && post.data.tags.slice(0, 3).map((tag) => (
                      <span class="rounded-full bg-orange-100 px-3 py-1 text-xs font-semibold text-orange-800 dark:bg-orange-900 dark:text-orange-200">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            ))}
          </div>
        ))}
      </div>
    </div>
  </Section>
</Layout>