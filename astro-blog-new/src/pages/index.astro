---
import { Image } from 'astro:assets'

import { Quote } from 'astro-pure/advanced'
import { PostPreview } from 'astro-pure/components/pages'
import { getBlogCollection, sortMDByDate } from 'astro-pure/server'
import { Button, Card, Icon, Label } from 'astro-pure/user'
import PageLayout from '@/layouts/BaseLayout.astro'
import Section from '@/components/home/Section.astro'
import SkillLayout from '@/components/home/SkillLayout.astro'
import config from '@/site-config'

const languages = ['JavaScript', 'TypeScript', 'Python', 'Shell']
const frontend = ['React', 'Vue', 'Astro', 'Tailwind CSS']
const backend = ['Node.js', 'Express', 'PostgreSQL', 'Redis']
const aiTools = ['Cursor', 'Claude', 'COZE', 'GPT']

const MAX_POSTS = 10
const allPosts = await getBlogCollection()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)

const imagePath = config.logo.src
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/*.{jpeg,jpg,png,gif,avif,webp}'
)
if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,avif,webp}"`
  )
---

<PageLayout meta={{ title: 'Home' }} highlightColor='#659EB9'>
  <main class='flex w-full flex-col items-center'>
    <section class='animate mb-10 flex flex-col items-center gap-y-7' id='content-header'>
      <Image
        src={images[imagePath]()}
        alt={config.logo.alt || 'Profile'}
        class='h-28 w-auto rounded-full border p-1'
        loading='eager'
        fetchpriority='high'
      />

      <div class='flex flex-col items-center gap-y-4'>
        <h1 class='text-3xl font-medium'>{config.author}</h1>
        <p class='text-sm text-muted-foreground'>Kevin.AI - 探索 AI 增强型全栈开发</p>
        <div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
          <Label
            title='GitHub'
            as='a'
            href='https://github.com/kevin12369'
            target='_blank'
          >
            <Icon name='github' class='size-5' slot='icon' />
          </Label>
        </div>
      </div>
    </section>

    <div id='content' class='animate flex flex-col gap-y-10 md:w-4/5 lg:w-5/6'>
      <Section title='关于我'>
        <p class='text-muted-foreground'>全栈开发者 / AI 技术爱好者 / 终身学习者</p>
        <p class='text-muted-foreground'>
          你好，我是 Kevin。一名热爱技术的全栈开发者，专注于前端、后端以及 AI 应用开发。
          我相信技术能够改变世界，也相信持续学习是保持竞争力的关键。
          在这个博客中，我分享我的学习笔记、技术实践和对未来的思考。
        </p>
        <Button title='了解更多' class='w-fit self-end' href='/about' variant='ahead' />
      </Section>

      {
        allPostsByDate.length > 0 && (
          <Section title='最新文章'>
            <ul class='flex flex-col gap-y-1.5 sm:gap-y-2'>
              {allPostsByDate.map((p) => (
                <li class='flex flex-col gap-x-2 sm:flex-row'>
                  <PostPreview post={p} />
                </li>
              ))}
            </ul>
            <Button title='查看更多文章' class='w-fit self-end' href='/blog' variant='ahead' />
          </Section>
        )
      }

      <Section title='技术栈'>
        <SkillLayout title='编程语言' skills={languages} />
        <SkillLayout title='前端开发' skills={frontend} />
        <SkillLayout title='后端开发' skills={backend} />
        <SkillLayout title='AI 工具' skills={aiTools} />
      </Section>

      <Section title='博客内容'>
        <div class='grid grid-cols-1 gap-3 sm:grid-cols-2'>
          <Card
            as='a'
            heading='技术博客'
            subheading='技术随笔、学习笔记、技术资讯'
            href='/blog'
          />
          <Card
            as='a'
            heading='技术文档'
            subheading='算法、前端、游戏开发、面试题库'
            href='/docs'
          />
          <Card
            as='a'
            heading='大语言模型'
            subheading='LLM 技术学习与实践'
            href='/docs/learning/llm'
          />
          <Card
            as='a'
            heading='AI 全栈开发'
            subheading='AI 增强型全栈开发系列文章'
            href='/blog/learning/ai-fullstack'
          />
        </div>
      </Section>
    </div>
    <Quote class='mt-12' />
  </main>
</PageLayout>
