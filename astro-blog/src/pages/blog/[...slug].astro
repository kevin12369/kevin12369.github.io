---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Section from '../../components/Section.astro';
import Tags from '../../components/Tags.astro';
import { formatDate } from '../../utils/data.util';
import { AppConfig } from '../../utils/AppConfig';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout
  head={{
    title: `${post.data.title} - ${AppConfig.title}`,
    description: post.data.description || AppConfig.description
  }}
>
  <Section>
    <div class="py-12">
      <article class="mx-auto max-w-4xl">
        <header class="mb-12">
          <div class="mb-4 flex flex-wrap items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
            <time>{formatDate(post.data.pubDate.toISOString())}</time>
            {post.data.minutesRead && <span>• {post.data.minutesRead}</span>}
            {post.data.category && <span>• {post.data.category}</span>}
          </div>

          <h1 class="mb-6 text-4xl font-bold">{post.data.title}</h1>

          {post.data.description && (
            <p class="text-xl text-gray-600 dark:text-gray-400">{post.data.description}</p>
          )}

          {post.data.tags.length > 0 && (
            <div class="mt-6">
              <Tags tags={post.data.tags} />
            </div>
          )}
        </header>

        <div class="prose prose-stone mx-auto max-w-none content dark:prose-invert">
          <Content />
        </div>

        <footer class="mt-12 border-t border-gray-200 pt-8 dark:border-gray-800">
          <a
            href="/blog/"
            class="text-orange-600 hover:text-orange-700 underline"
          >
            ← Back to all posts
          </a>
        </footer>
      </article>
    </div>
  </Section>
</Layout>