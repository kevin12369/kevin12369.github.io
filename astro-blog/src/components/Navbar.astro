---
const currentPath = Astro.url.pathname;
const navItems = [
  { name: '首页', path: '/' },
  { name: '深度学习', path: '/blog/?category=AI全栈' },
  { name: '面试准备', path: '/blog/?category=面试' },
  { name: '技术资讯', path: '/blog/?category=资讯' },
  { name: '实战项目', path: '/blog/?category=项目' },
  { name: '个人随笔', path: '/blog/?category=随笔' },
];
---

<nav class="bg-gray-900 border-b border-gray-800 sticky top-0 z-50">
  <div class="container mx-auto px-4 py-4 max-w-6xl">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center gap-3">
        <img src="/logo.svg" alt="Logo" class="w-8 h-8" />
        <span class="text-xl font-bold bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">
          Kevin.AI
        </span>
      </a>

      <ul class="flex items-center gap-6">
        {navItems.map((item) => (
          <li>
            <a
              href={item.path}
              class:text-blue-400={currentPath === item.path}
              class="text-gray-300 hover:text-blue-400 transition-colors"
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</nav>